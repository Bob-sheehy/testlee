<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
       <td> <%= image_tag blog.pic.url %></td>
        <td><%= blog.title %></td>
        <td><%= blog.description %></td>
        <td><%= blog.author %></td>

        <td><%= link_to 'Show', blog, class: "btn btn-link"  %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-link"  %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
